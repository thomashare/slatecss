// Slate configuration

// css reset file
reset = '../node_modules/normalize.css/normalize.css'

// set max amount of columns
max-columns = 12

// set overscope elements
// overscope allows for greater control of element display across device sizes
// possible: backgrounds, divided, margins, nav, margins, padding, utility
overscope = ( divided margins nav )

// font settings
font-base = inherit
font-stack = -apple-system, BlinkMacSystemFont, "Segoe UI", "Roboto", "Helvetica Neue", Arial, sans-serif
line-height = 1em
max-font-level = 25

// set options
grid = standard

// set display properties
box-sizing = border-box

// link colors
link-color = #000
link-hover = link-color
link-active = link-color
link-focus = link-color

// set max margin and padding levels
max-margin = 25
max-padding = 25

// margin and padding steps
margin-step = 5px
pad-step = 5px

// padding levels for navs
xs-nav-pad = 3px
sm-nav-pad = 10px
md-nav-pad = 20px
lg-nav-pad = 40px
xl-nav-pad = 60px

// create list of gutters
gutters = ( default xs sm md lg xl )

// define gutter sizes
default-gutter = 20px
xs-gutter = 10px
sm-gutter = 10px
md-gutter = 15px
lg-gutter = default-gutter
xl-gutter = default-gutter

// define max dividers
divided-max = 12

// list all possible sides
sides = ( bottom left right top )

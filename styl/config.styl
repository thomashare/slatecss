// Slate configuration

// css reset file
reset = '../node_modules/normalize.css/normalize.css'

// columns
max_columns = 12

// gutter
gutter = 20px
xs-gutter = 10px
sm-gutter = 10px
md-gutter = 20px
lg-gutter = 20px
xl-gutter = 20px

// fonts
font-base = 1em
line-height = 1em

// options
mobile-first = true
grid = standard

// misc
box-sizing = border-box

// nav settings
nav-image-height = gutter*2
// no padding elements
.no-pad
  padding: 0
  
// element visibility
.hide
  opacity: 0
.faded
  opacity: 0.5
.show
  opacity: 1

// element effects
.box-glow
  box-shadow: 0px 2px 10px rgba(255,255,255,0.85), 0px -3px 15px rgba(255,255,255,0.85), 0px 5px 15px rgba(255,255,255,0.85), 0px -5px 15px rgba(255,255,255,0.85)
.box-shadow
  box-shadow: 0px 2px 10px rgba(0,0,0,0.1), 0px -3px 15px rgba(0,0,0,0.1), 0px 5px 15px rgba(0,0,0,0.1), 0px -5px 15px rgba(0,0,0,0.1)
.text-glow
  text-shadow: 0px 2px 5px rgba(255,255,255,0.85),-2px 0px 5px rgba(255,255,255,0.85),0px -2px 5px rgba(255,255,255,0.85),2px 0px 5px rgba(255,255,255,0.85)
.text-shadow
  text-shadow: 0px 2px 5px rgba(0,0,0,0.85),-2px 0px 5px rgba(0,0,0,0.85),0px -2px 5px rgba(0,0,0,0.85),2px 0px 5px rgba(0,0,0,0.85)

// border radius
for i in (0..15)
  .radius-{i}
    border-radius: i*1px

for screen-size in screen-sizes
  
  // get min or max-width from config. Mobile first will set a min-width rather than a max-width.
  width = mobile-first? 'min-width' : 'max-width'

  // setup screen sizes for each column size
  @media screen and ({width}: screen-size+'-width')
        
    // pull classes (left, center and right)
    .{screen-size}-left
      float: left
    .{screen-size}-right
      float: right
    .{screen-size}-center
      float: none
      margin: 0 auto
        
    // hide on different screen sizes
    .{screen-size}-hide, .{screen-size}-0
      display: none
      
    // show on different screen sizes
    .{screen-size}-show
      display: block
      

// text alignment defaults
*:not(.sidebar)
  [class*='-text-']
    & > *
      &:not(.block):not(.inline)
        display: inline-block
      float: none
      &:not(.no-pad)
        padding: 0
      vertical-align: top
      
// element formation: inline or block
.inline
  display: inline
.inline-block
  display: inline-block
.block
  display: block
 
// item-pad and link-pad parent classes  
for screen-size in screen-sizes
  
  // one level padding
  for level-1 in (0..max-padding)
    // item padding
    .{screen-size}-item-pad-{level-1}
      li
        padding: level-1*1px
    .{screen-size}-link-pad-{level-1}
      a 
        padding: level-1*1px

    // two level padding
    for level-2 in (0..max-padding)
      .{screen-size}-item-pad-{level-1}-{level-2}
        li 
          padding: level-1*1px level-2*1px
      .{screen-size}-link-pad-{level-1}-{level-2}
        a
          padding: level-1*1px level-2*1px
          